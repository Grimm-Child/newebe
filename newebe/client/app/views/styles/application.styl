html
body
#content
    height: 100%
    box-sizing: border-box
    font-family: main

#content
    text-align: center

#home
    .question
        font-family: robotic, main
        font-size: 3em

    input
        border: none
        font-size: 2em
        padding: 0.4em
        border-radius: 2em

    input:active
        border: 0

    input:focus
        border: 0

#activities-view
    .activity
        border-top: 1px solid #DDD

    .author
        font-weight: bold
        margin-right: 5px 

