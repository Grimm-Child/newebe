// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_font'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

html
body
#content
    height: 100%
    box-sizing: border-box
    font-family: main

#content
    text-align: center

#home
    .question
        font-family: robotic, main
        font-size: 3em

    input
        border: none
        font-size: 2em
        padding: 0.4em
        border-radius: 2em

    input:active
        border: 0

    input:focus
        border: 0

#navigation
    background: black
    box-shadow: -1px 3px 4px black + 20%

    li
        a
            border: 0
            font-weight: bold
            color: white
            background-color: black
            cursor: pointer
            text-shadow: 0 0 0 #FFF

        a:hover
            color: #444
            font-weight: bold
            text-decoration: none
            text-shadow: 0 0 0 #FFF
            background-color: purple
            color: white

        a.active
            background-color: #DEF
            color: #DEF - 80%


#activities-view
    .activity
        border-top: 1px solid #DDD

    .author
        font-weight: bold
        margin-right: 5px 


// Profile

#profile-view
    p
        margin: 0

    #profile-name-field
        padding: 20px 0 0 20px
        font-size: 40px
        font-weight: bold

    #profile-url-field
        font-size: 16px
        padding-left: 20px

    #profile-picture
        margin: 20px
