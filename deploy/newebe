#!/bin/bash
 
# Replace these three settings.
PROJDIR="/home/gelnior/tools/newebe"
PIDFILE="/home/gelnior/tools.pid"
PORT=8001
 
case "$1" in
    start)
      cd $PROJDIR
      python manage.py runfcgi method=prefork host=127.0.0.1 port=$PORT pidfile=$PIDFILE
     RETVAL=$?
  ;;
    stop)
      kill `cat -- $PIDFILE`
      rm -f -- $PIDFILE
      RETVAL=$?
  ;;
    restart)
      kill `cat -- $PIDFILE`
      rm -f -- $PIDFILE
      cd $PROJDIR
      python manage.py runfcgi method=prefork host=127.0.0.1 port=$PORT pidfile=$PIDFILE
      RETVAL=$?
  ;;
    *)
      echo "Usage: projet_django {start|stop|restart}"
      exit 1
  ;;
esac      
exit $RETVAL
